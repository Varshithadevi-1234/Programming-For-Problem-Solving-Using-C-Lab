#include <stdio.h>
int main() {
 int customer_id;
 char customer_name[100];
 float units_consumed, bill_amount;
 printf("Enter Customer ID: ");
 scanf("%d", &customer_id);
 printf("Enter Customer Name: ");
 scanf("%s", customer_name)
printf("Enter Units Consumed: ");
 scanf("%f", &units_consumed);
 if (units_consumed <= 100) {
 bill_amount = units_consumed * 1.5;
 } else if (units_consumed <= 300) {
 bill_amount = 100 * 1.5 + (units_consumed - 100) * 2.0;
 } else {
 bill_amount = 100 * 1.5 + 200 * 2.0 + (units_consumed - 300) * 3.0;
 }
 bill_amount += 50; // Fixed charge
 printf("\nElectricity Bill\n");
 printf("----------------\n");
 printf("Customer ID: %d\n", customer_id);
 printf("Customer Name: %s\n", customer_name);
 printf("Units Consumed: %.2f\n", units_consumed);
 printf("Total Bill Amount: Rs. %.2f\n",bill_amount);
return 0;
}
